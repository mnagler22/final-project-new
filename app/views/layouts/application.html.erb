<!DOCTYPE html>
<html>
  <head>
    <title>FinalProject</title>
    <%= csrf_meta_tags %>
      <ul>
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/user_sign_out">Sign out!</a>
        </li>
        <li>
          <a href="/users/#{user.username}">My page!</a>
        </li>
        <li>
          <%= session.fetch( :user_username) %>
        </li>

      </ul>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% if notice.present? %>
      <div style="border: thin green solid; color:green">
        <%= notice %>
      </div>
    <% end %>

    <% if alert.present? %>
      <div style="border: thin red solid; color:red">
        <%= alert %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
